{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}} grid-item" data-id="{{comment_id}}">
    <div class="content-holder">
        <div class="post-meta {{#if feature_image}}has-image{{/if}}">
            <a href="{{url}}" title="{{title}}" class="img-holder">
                {{#if feature_image}}
                <img src="{{img_url feature_image size=" m"}}" alt="{{title}}">
                {{/if}}
            </a>
        </div>
        <h2 class="post-title"><a href="{{url}}" title="{{title}}">{{title}}</a></h2>
        <p>
            {{excerpt words="22"}}
        </p>
    </div>
</article>
{{/foreach}}
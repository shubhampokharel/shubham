<!DOCTYPE html>
<html lang="{{lang}}">
<head>

    {{> theme_head}}

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}

</head>
<body class="{{body_class}} nav-closed">

    <div class="main-container">
    
        {{> theme_header}}
        
        <div id="swup" class="transition-fade">
        {{{body}}}
        </div>
 
    </div>

    {{> theme_footer}}

    {{!-- Ghost Content API --}}
    <script type="text/javascript" src="https://unpkg.com/@tryghost/content-api@1.0.0/umd/content-api.min.js"></script>

    {{!-- 3rd party scripts --}}
    <script type="text/javascript" src="{{asset "js/libraries.js"}}"></script>

    {{!-- The main JavaScript file for Leap --}}
    {{#if pagination.pages}}
    <script>
        var maxPages = parseInt('{{pagination.pages}}');
    </script>
    {{/if}}
    <script type="text/javascript" src="{{asset "js/main.js"}}"></script>

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}
</body>

<script src="{{asset "js/swup.js"}}" data-swup-ignore-script></script>
<script data-swup-ignore-script>
        // Initiate Swup transitions
        var swup = new Swup({
            plugins: [new SwupHeadPlugin(), new SwupScriptsPlugin()],
        });
        document.addEventListener('swup:contentReplaced', event => {
            window.scrollTo(0, 0);
            initInfiniteScroll(window, document);
            $('body').removeClass('site-head-open');
        });
</script>

</html>
